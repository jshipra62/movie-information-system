<%= form_with(model: user, local: true, :html => {:class => "card p-3 bg-light mx-auto", :style => "width: 30rem"}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group m-2">   
    <%= form.text_field :name, placeholder:"Enter Name:", class:'form-control'  %>
  </div>

  <div class="form-group m-2">
    <%= form.text_field :email, placeholder:"Enter Email-id:",  class:'form-control ' %>
  </div>

  <div class="form-group m-2">   
    <%= form.password_field :password, placeholder:"Enter Password", class:'form-control ' %>
  </div>

  <div class="form-group m-2">    
    <%= form.password_field :password_confirmation, placeholder:"Confirm Password", class:'form-control ' %>
  </div>

  <div class="actions m-2">
    <%= form.submit "Sign Up!", :class => "btn btn-primary" %>
  </div>
<% end %>


