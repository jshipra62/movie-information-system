<h2 class="text-center">User LogIn</h2>
<%= form_for :session, :html => {:class => "card p-3 bg-light mx-auto", :style => "width: 25rem"} do |f| %>
  <div class="form-group m-2">
    <%= f.text_field :email, autofocus: true, placeholder:"Enter Email-id:", class:'form-control' %>
  </div>
  <div class="form-group m-2">
    <%= f.password_field :password, placeholder:"Enter Password:", class:'form-control'  %>
  </div>
  <div class="actions m-2">
    <%= f.submit "Log In",  :class => "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back', movies_path %>

<% if current_user %>
  <% controller.redirect_to movies_path %>
<% end %>
