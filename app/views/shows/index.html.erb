<%= link_to 'New Show', new_show_path, class: "btn btn-primary mb-4" %>
<%= link_to 'Back', movies_path, class: "d-block" %>
<h3 class="text-center">Show Details:</h3>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Movie</th>
      <th>Theater</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= link_to show.movie.title, movie_path(id: show.movie_id) %></td>
        <td><%= link_to show.theater.name, theater_path(id: show.theater_id) %></td>
        <td><%= link_to 'Edit Show', edit_show_path(show) %></td>
        <td><%= link_to 'Delete Show', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




