<%= link_to 'Back', movies_path, class: "d-block" %>
<h3 class="text-center">Booking History:</h3>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>  
      <th>Movie</th>
      <th>Theater</th>
      <th>Booking Date</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.movie.title, book_path(book) %></td>
        <td><%= book.theater.name %></td>  
        <td><%= book.bdate.to_s(:long) %></td>        
      </tr>
    <% end %>
  </tbody>
</table>


