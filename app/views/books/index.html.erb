<%= link_to 'Back', movies_path %>
<h3 class="text-center">Booking Details:</h3>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Booking-ID</th>      
      <th>Movie</th>
      <th>User</th>
      <th>Theater</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.movie.title %></td>
        <td><%= book.user.name %></td>
        <td><%= book.theater.name %></td>
        <td><%= link_to 'Booking Receipt', book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


