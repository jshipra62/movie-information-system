<div class="reviews card px-3 pt-2 mx-auto bg-light" style="width: 30rem">
  <div class="reviews card-body">
    <h3 class="card-title text-center"> Booking Receipt </h3>
    <p>
      <strong>User Name:</strong>
      <%= @book.user.name %>
    </p>

    <p>
      <strong>Movie:</strong>
      <%= @book.show.movie.title %>
    </p>

    <p>
      <strong>Theater:</strong>
      <%= @book.show.theater.name %>
    </p>

    <p>
      <strong>Time:</strong>
      <%= @book.slot.time.strftime("%I:%M %p") %>
    </p>
 
    <p>
      <strong>Booking date:</strong>
      <%= @book.bdate.to_s(:long) %>
    </p>

    <p>
      <strong>No of seats:</strong>
      <%= @book.bseat %>
    </p>

    <p>
      <strong>Total price: </strong>Rs
      <%= @book.show.theater.price * @book.bseat %>
    </p>
  </div> 
</div>

<% if current_user %>
  <% if current_user.admin %>
    <%= link_to 'Back', books_path %>
  <% else %>
    <%= link_to 'Back', userbooks_path(user_id: current_user.id) %>
  <% end %>
<% end %>

